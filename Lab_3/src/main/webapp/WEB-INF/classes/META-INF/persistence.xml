<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd" 
             version="1.0">
    <persistence-unit name="Hits" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>java:/PostgresDS2</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <class>org.eclipse.persistence.jpa.example.inventory.model.AbstractDao</class>
        <properties>
            <property name="eclipselink.deploy-on-startup" value="create-or-extend-tables"/>
        </properties>
    </persistence-unit>
</persistence>